{
    "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
    "appId": "com.venesa.app",
    "productName": "Venesa",
    "copyright": "Copyright Â© 2026 Mian Junaid",
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "files": [
        "src/**/*",
        "package.json",
        "!**/*.map",
        "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,README,readme,test,__tests__,tests,powered-test,*.ts,*.map}",
        "!**/node_modules/.cache/**/*"
    ],
    "extraResources": [
        {
            "from": "assets",
            "to": "assets",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "models",
            "to": "models",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": ".env",
            "to": ".",
            "filter": [
                ".env"
            ]
        }
    ],
    "asar": true,
    "asarUnpack": [
        "node_modules/vosk-browser/**/*"
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "assets/icon.ico"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "Venesa",
        "installerIcon": "assets/icon.ico",
        "uninstallerIcon": "assets/icon.ico",
        "installerHeaderIcon": "assets/icon.ico",
        "perMachine": false
    }
}